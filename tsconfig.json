{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"customConditions": [
			"node"
		],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noImplicitOverride": true,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}